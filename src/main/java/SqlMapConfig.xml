<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver"/>	
				<property name="url" value="jdbc:mysql://127.0.0.1:3307/mybatis"/>	
				<property name="username" value="root"/>	
				<property name="password" value="root"/>	
			</dataSource>
		</environment>	
	</environments>
	
	<mappers>
		<mapper resource="com/ct/test/UserMapper.xml"/>
		<mapper resource="com/ct/test/StudentMapper.xml"/>
		<mapper resource="com/ct/test/CardMapper.xml"/>
		<mapper resource="com/ct/test/OrderMapper.xml"/>
		<mapper resource="com/ct/test/ProductMapper.xml"/>
	</mappers>
</configuration>


